{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc linux x64 build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Semester 3/DSA Lab/src/${fileBasename}",
                "-o",
                "${workspaceFolder}/Semester 3/DSA Lab/out/linux_x64/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Semester 3/DSA Lab/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc windows x64 build active file",
            "command": "C:\\Program Files\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\Semester 2\\C Lab\\src\\${fileBasename}",
                "-o",
                "${workspaceFolder}\\Semester 2\\C Lab\\out\\windows_x64\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\Semester 2\\C Lab\\src"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}